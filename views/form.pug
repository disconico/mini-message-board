extends layout 

block content 
  a(href="/") Go back 
  br
  h1= title


  form(class="flex" action="/new" method="POST")
    div(class="inputs")
      label(for="user") Name:  
        input(
          type="text" 
          id="user" 
          name="user"
        )

      label(for="text") Message:  
        textarea(
          id="text" 
          name="text"
          cols="30"
          rows="10"
          required 
        )
    input(type="submit" value="Submit")